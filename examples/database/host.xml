            </instance>
        </context>

        <!-- Quality Assurance -->
        <context>
            <attribute name="env" value="qa"/>
            <attribute name="domain" value="QA"/>
        </context>

        <!-- Integration -->
        <context>
            <attribute name="env" value="int"/>
            <attribute name="domain" value="INT"/>
        </context>

        <!-- Production -->
        <context>
            <attribute name="env" value="prod"/>
            <attribute name="domain" value="PRD"/>
        </context>

    </context>
</type>
