<type name="host" xmlns="http://nwillc.github.io/scotty" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://nwillc.github.io/scotty http://nwillc.github.io/scotty/database.xsd">
    <context>
        <attribute name="env" value="dev"/>
        <instance>
            <attribute name="hostname" value="localhost"/>
            <attribute name="ip_address" value="127.0.0.1"/>
        </instance>
        <instance>
            <attribute name="hostname" value="devbox"/>
            <attribute name="ip_address" value="192.168.0.1"/>
        </instance>
    </context>
    <context>
        <attribute name="env" value="qa"/>
        <instance>
            <attribute name="hostname" value="qabox"/>
            <attribute name="ip_address" value="192.168.0.10"/>
        </instance>
    </context>
    <context>
        <attribute name="env" value="prod"/>
        <instance>
            <attribute name="hostname" value="prodbox1"/>
            <attribute name="ip_address" value="192.168.0.100"/>
        </instance>
        <instance>
            <attribute name="hostname" value="prodbox2"/>
            <attribute name="ip_address" value="192.168.0.101"/>
        </instance>
    </context>
</type>

